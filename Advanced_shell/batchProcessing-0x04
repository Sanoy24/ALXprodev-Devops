#!/bin/bash

# Create directory for storing Pok√©mon data
mkdir -p pokemon_data

# Pok√©mon to fetch
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Function to fetch data
fetch_pokemon() {
    local name=$1
    echo "Fetching data for $name..."
    curl -s --fail "https://pokeapi.co/api/v2/pokemon/$name" -o "pokemon_data/${name}.json"
    
    if [ $? -eq 0 ]; then
        echo "Saved data to pokemon_data/${name}.json ‚úÖ"
    else
        echo "‚ùå Failed to fetch $name" >&2
    fi
}

# Launch each fetch in background and store PIDs
pids=()
for pokemon in "${pokemon_list[@]}"; do
    fetch_pokemon "$pokemon" &
    pids+=($!)  # Track background PID
done

# Show current background jobs
echo "üîç Background jobs running:"
jobs

# Wait for all background jobs to finish
for pid in "${pids[@]}"; do
    wait "$pid"
done

# Confirm all jobs finished
echo "‚úÖ All Pok√©mon data fetched."

# Optional: demonstrate kill (but we won't actually kill)
echo "üí° To kill a background job manually, you can use: kill <PID>"
# Example: kill "${pids[0]}"
