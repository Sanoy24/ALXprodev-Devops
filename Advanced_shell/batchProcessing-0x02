#!/bin/bash

# Create directory if not exists
mkdir -p pokemon_data

# List of Pokémon
pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Error log file
ERROR_LOG="pokemon_data/errors.log"
> "$ERROR_LOG"  # Clear previous log

# Loop through each Pokémon
for pokemon in "${pokemon_list[@]}"; do
    echo "Fetching data for $pokemon..."
    
    success=false
    attempts=0

    while [ "$success" = false ] && [ $attempts -lt 3 ]; do
        ((attempts++))

        # Fetch data
        curl -s --fail "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "pokemon_data/${pokemon}.json"

        if [ $? -eq 0 ]; then
            echo "Saved data to pokemon_data/${pokemon}.json ✅"
            success=true
        else
            echo "Attempt $attempts failed for $pokemon..."
            sleep 1  # Wait before retry
        fi
    done

    if [ "$success" = false ]; then
        echo "❌ Failed to fetch $pokemon after 3 attempts. Logging error."
        echo "$(date +%F\ %T) - Failed to fetch data for $pokemon" >> "$ERROR_LOG"
    fi

    sleep 1  # Rate-limit delay
done
